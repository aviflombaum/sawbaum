<div class="navbar navbar-inverse">
  <div class="navbar-header">
    <a class="navbar-brand" href="/">Sawbaum</a>
  </div>
  <div class="navbar-collapse collapse navbar-inverse-collapse">
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">Make Your Own!!!</a></li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="col-lg-12">
    <div class="bs-component">
      <div class="well bs-component">
        <%= form_for @montage, :class => "form-horizontal" do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.text_field :name, :class => "form-control input-lg", :placeholder => "Name Your Collage" %>
            </div>

            <div class="form-group">
             <button type="submit" class="btn btn-primary btn-lg btn-block">Get Started!!!</button>
            </div>
        <% end %>
      </div>
    </div>

    <h1 style="text-align: center">See Some of Our Favorites</h1>
    <div class="list-group">
      <% Montage.all.each do |montage| %>
        <%= link_to montage.name, montage, :class => "list-group-item" %>
      <% end %>
    </div>
  </div>
</div>