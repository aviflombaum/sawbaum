<div class="navbar navbar-inverse">
  <div class="navbar-header">
    <a class="navbar-brand" href="/">Sawbaum</a>
  </div>
  <div class="navbar-collapse collapse navbar-inverse-collapse">
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">Make Your Own!!!</a></li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="col-lg-12">
    <div class="bs-component">
      <div class="well bs-component">
        <%= form_for @montage, :class => "form-horizontal" do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.text_field :name, :class => "form-control input-lg", :placeholder => "Name Your Collage", required: :true %>
            </div>

            <div class="form-group">
             <button type="submit" class="btn btn-primary btn-lg btn-block">Get Started!!!</button>
            </div>
        <% end %>
      </div>
    </div>

    <h1 style="text-align: center">See Some of Our Favorites</h1>
    <ul class="list-group">
      <% Montage.all.each do |montage| %>
        <% begin %>
        <% next if montage.name.blank?  %>
        <li class="list-group-item">
          <span style="float: right;">
            <%#= link_to "", edit_montage_path(montage), :class => "glyphicon glyphicon-pencil" %>
            <%#= link_to "", montage_path(montage), :method => :delete, :class => "glyphicon glyphicon-remove" %>
          </span>
          <%= link_to montage.name, montage %>
        </li>      
        <% rescue
        end %>

      <% end %>
    </ul>

    <div class="footer">
        <p>Made with â™¥ by <a href="http://twitter.com/hs_accumulator">Hannah Sawtell</a> and <a href="http://twitter.com/aviflombaum">Avi Flombaum</a> on May 3rd, 2014 at <a href="http://rhizome.org/sevenonseven/">Seven on Seven by Rhizome</a></p>
      </div>
  </div>
</div>

